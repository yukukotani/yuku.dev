---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogFooter from '../components/BlogFooter.astro';
import ArticlePreview from '../components/ArticlePreview.astro';
import Container from "../components/Container.astro";

let allArticles = Astro.fetchContent('./articles/**/*.md');
allArticles = allArticles.sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate));

---
<html>
  <head>
    <BaseHead path="/" />
  </head>

  <body>
    <BlogHeader />
    <Container>
      {allArticles.map(p => <ArticlePreview article={p} />)}
    </Container>
    <BlogFooter />
  </body>
</html>