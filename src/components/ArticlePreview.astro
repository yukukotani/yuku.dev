---
export interface Props {
  article: any;
}

const { article } = Astro.props;
---
<article class="article">
  <div class="date">{article.publishDate}</div>
  <a href={article.url}><h1 class="title">{article.title}</h1></a>
</article>

<style lang="scss">
.article {
  padding: 8px 0;

  .date {
    font-size: 14px;
    color: var(--color-gray);
  }
  .title {
    font-size: 18px;
  }
}
</style>
