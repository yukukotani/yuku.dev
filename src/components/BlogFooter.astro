---
export interface Props {
  hideProfile?: boolean;
}

const { hideProfile = false } = Astro.props;
---

<header class="footer">
  {
    !hideProfile && (
      <div class="profile">
        <picture>
          <source type="image/webp" srcset="/icon.webp" />
          <img src="/icon.png" class="icon" alt="yuku's icon" />
        </picture>
        <div>
          <div class="name">
            <a href="/about">Yuku Kotani</a>
          </div>
          <div class="description">Software Engineer @ Ubie, Inc.</div>
          <br />
          Student (B3) @ Univ. of Tsukuba
        </div>
      </div>
    )
  }
</header>
<div class="links">
  <a href="https://github.com/yukukotani" target="_blank" rel="noopener">GitHub</a>
  <a href="https://twitter.com/yukukotani" target="_blank" rel="noopener">Twitter</a>
  <a href="/feed.xml" target="_blank" rel="noopener">RSS</a>
</div>
<div class="note">&copy; Yuku Kotani | This site uses Google Analytics.</div>

<style lang="scss">
  .footer {
    padding-top: 32px;
    display: flex;
    flex-direction: column;

    .profile {
      margin: 0 auto;
      display: flex;

      .icon {
        object-fit: cover;
        height: 64px;
        width: 64px;
        border-radius: 50%;
        margin-right: 20px;
      }
      .name {
        font-weight: bold;
      }
      .description {
        font-size: 12px;
      }
    }
    .links {
      padding-top: 16px;
      text-align: center;
      font-size: 14px;
      & > a {
        margin: 0 4px;
      }
    }
    .note {
      text-align: center;
      font-size: 12px;
      padding: 8px 0px 16px;
    }
  }
</style>
